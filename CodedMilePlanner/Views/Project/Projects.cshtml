@model List<CodedMilePlanner.Models.Project>
@{
    ViewData["Title"] = "Projects";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
    <div>
        <h2 class="projects-header">
            My Projects
            <a href="../../Project/AddProject">
                <i class="fas fa-plus-circle" aria-hidden="true"></i>
            </a>
        </h2> 

        @if (Model.Count == 0)
        {
                <script type="text/javascript">
                    $(document).ready(
                        swal({
                          title: "Great job!",
                          text: "Let's get started with making our first project",
                            icon: "success",
                            button: "Add Project",
                        }).then(function() {
                            window.location = "/Project/AddProject";
                        })
                    );

                </script>
        }
        else
        {
            <span>You have @Model.Count project(s)</span>
        }
    </div>

    @if (Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Start_Time.ToShortDateString()</td>
                        <td>@item.End_Time.ToShortDateString()</td>
                        <td><a href="../../Project/EditProject?id=@item.ID">Update</a></td>
                        <td><a href="../../Project/Delete?id=@item.ID">Delete</a></td>
                        <td><a href="../../Milestone/Milestones?id=@item.ID">Milestones</a></td>
                    </tr>
                }
            </tbody>

        </table>
    }

