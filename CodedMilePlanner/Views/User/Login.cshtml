@model CodedMilePlanner.Models.ViewModels.LoginModel

@{
    ViewData["Title"] = "Log In";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
    </div>
    <div class="card login-card col-md-6">
        <div class="card-header h2">Log In</div>
        <div class="card-body">
            <form asp-controller="User" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div>
                    <span> <i class="fas fa-user"></i> Email</span>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" , placeholder = "Email" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>

                <br />

                <div>
                    <span><i class="fas fa-key"></i> Password</span>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" , placeholder = "Password" })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>

                <br />

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3">
    </div>
</div>