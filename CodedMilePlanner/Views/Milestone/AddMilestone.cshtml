@*
    Date Created - 02/04/2019
    Version - 1.0.0

    Description:
    allows the user to enter a name, description and due date or a milestone of a project.
*@
@model CodedMilePlanner.Models.Milestone
@{
    ViewData["Title"] = "Add a Milestone";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-3">
    </div>
    <div class="card login-card col-md-6">
        <div class="card-header h2">Add a Milestone</div>
        <div class="card-body">
            <form asp-controller="Milestone" asp-action="AddMilestone" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">

                <div>
                    <span> <i class="fas fa-project-diagram"></i> Name</span>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name of Milestone" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </div>

                <br />

                <div>
                    <span> <i class="fas fa-align-left"></i> Description</span>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Description" })
                    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                </div>

                <br />

                <div>
                    <span><i class="fas fa-calendar-alt"></i> Due Date</span>
                    <div class="row form-group" style="margin-top:1em;margin-bottom:1em;">
                        <div class="col-sm-6">
                            @Html.EditorFor(x => x.Due_Date, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Due_Date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <br />
                @Html.HiddenFor(x => x.Project_ID)

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add My New Milestone</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3">
    </div>
</div>




