<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <title>@ViewData["Title"] - CodedMile</title>



    <!--Stylesheet Files-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
    <link href="~/css/navbar.css" rel="stylesheet" />
    <link href="~/css/Index.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/card.css" rel="stylesheet" />
    <!-- END: Stylesheet Files -->
    <!-- Script Files -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous" async></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous" async></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js" async></script>
    <script src="~/js/clipboard.js"></script>
    <script src="~/js/copier.js"></script>
    <!-- END: Script Files -->
</head>
<body style="background: url('/images/Home/home-banner.jpg') no-repeat center fixed; height:100vh;">
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @{
        if (HttpContextAccessor.HttpContext.Request.Cookies.ContainsKey("cmAuthToken"))
        {
            @await Html.PartialAsync("~/Views/Shared/Layout/_LoggedInNavbar.cshtml")
        }
        else
        {
            @await Html.PartialAsync("~/Views/Shared/Layout/_Navbar.cshtml")
        }
    }


    <div class="container body-content">
        @RenderBody()

        <hr />
        @await Html.PartialAsync("~/Views/Shared/Layout/_Footer.cshtml")

    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>




